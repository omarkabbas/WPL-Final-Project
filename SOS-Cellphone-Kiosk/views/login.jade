extends layout

append stylesheets
    link(rel="stylesheet", href="/stylesheets/login.css")

block content
    div(id="login")
        div(class="container")
            div(id="login-row" class="row justify-content-center allign-items-center")
                div(id="login-column" class="col-md-6")
                    div(id="login-box" class="col-md-12")
                        form(id="login-form" class="form" action="/login" method="post")
                            h3(class="text-center text-info") Login
                            - if(typeof(message) !== 'undefined')
                                div(class="error") #{message}
                            div(class="form-group")
                                label(for="username" class="text-info") Username: 
                                br
                                input(type="text" name="username" id="username" class="form-control")
                            div(class="form-group")
                                label(for="password" class="text-info") Password:
                                br
                                input(type="password" name="password" id="password" class="form-control")
                            div(class="form-group")
                                button(type="submit" class="btn btn-primary") Submit
                        div(id="register-link")
                            a(href="/register" class="text-info") Register here
                            

