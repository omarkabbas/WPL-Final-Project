doctype html
html
  head
    block jscripts
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    block stylesheets
      link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", crossorigin="anonymous")
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css")
      link(rel="stylesheet", href="/stylesheets/layout.css")
      link(rel="icon" href="/favicon/favicon.jpg")
    title= title
  body
      nav(class="navbar navbar-expand-sm navbar-dark bg-dark justify-content-between")
        div(class="navbar-header navbar-collapse justify-content-between" id="navbarNav")
          a(class="navbar-brand" href="/products") 
            i(class="fas fa-mobile-alt")   SOS Cellphone Kiosk
          
          div(class="navbar-nav")
            - if (typeof(username) === 'undefined')
                a(class="nav-item nav-link mx-3" href="/products") Products
                a(class="nav-item nav-link mx-3" href="/login") Login
                a(class="nav-item nav-link mx-3" href="/register") Register
            - else
                span(class="navbar-text") Hello, #{username}
                a(class="nav-item nav-link mx-3" href="/products") Products
                a(class="nav-item nav-link mx-3" href="/cart")
                  i(class="fas fa-shopping-cart") Cart
                a(class="nav-item nav-link mx-3" href="/history") Purchase History
                -if(typeof(isAdmin) !== 'undefined' && isAdmin) {
                  a(class="nav-item nav-link mx-3" href="/admin/addItem") Add Product
                  a(class="nav-item nav-link mx-3" href="/products/all") All Products
                -}
                
                a(class="nav-item nav-link mx-3" href="/logout") Logout

      
    block content

    block footer

    include footer
